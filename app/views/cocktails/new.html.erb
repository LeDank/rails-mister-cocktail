<div class="new_cocktail row justify-content-center">
<h1> Add your new <strong>EXPLOSIVE</strong> cocktail !</h1>
<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.submit "add a cocktail", class: "btn btn-primary" %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

<% end %>
</div>
