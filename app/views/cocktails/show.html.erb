

<div class="row justify-content-center">
  <div class="show-card">
  <h1> <%= @cocktail.name %></h1>
  <ul>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description + ' - ' + dose.ingredient.name %>
        <%= link_to '', dose_path(dose), method: :delete, :class => "fas fa-trash" %>
      </li>
    <% end %>
  </ul>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%=  f.submit "Add dose", class: "btn btn-success" %>
    <%= link_to 'Explode cocktail', cocktail_path(@cocktail), method: :delete, :class => "btn btn-warning" %>
  <% end %>
  </div>
</div>

